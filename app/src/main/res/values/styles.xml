<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonLower" parent="Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BadButton" parent="ButtonLower">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/delete</item>
    </style>

    <style name="TitleField" parent="TextField">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MediumField" parent="TitleField">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldField" parent="TitleField">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightField" parent="TitleField">
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RadioButton" parent="LightField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/add_item_text_size</item>
        <item name="buttonTint">@drawable/shape_radio_button</item>
    </style>

    <style name="LightLink" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/login_controls_size</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditTextDeselected" parent="EditText">
        <item name="android:textColorHint">@color/deselected</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
    </style>

    <style name="EditTextLine" parent="EditText">
        <item name="android:textColorHint">@color/deselected</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/edit_text_height_big</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textCursorDrawable">@drawable/shape_caret</item>
        <item name="android:background">@drawable/shape_edit_text_line</item>
        <item name="android:padding">@dimen/customer_add_p</item>
    </style>

    <style name="EditTextUnderscore" parent="EditTextLine">
        <item name="android:background">@drawable/shape_edit_text_underscore</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="EditTextUnderscoreSmall" parent="EditTextLine">
        <item name="android:background">@drawable/shape_edit_text_underscore</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">@dimen/edit_text_height_small</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/deselected</item>
        <item name="colorAccent">@color/deselected</item>
        <item name="colorControlNormal">@color/deselected</item>
        <item name="colorControlActivated">@color/deselected</item>
    </style>

    <style name="EditTextNotEditable" parent="EditText">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SeparatorBig">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SeparatorSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SeparatorVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="ImageView">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/white</item>
        <item name="android:contentDescription">@string/content_description</item>
    </style>

    <style name="CameraImageView">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/content_description</item>
    </style>

    <style name="ImageViewNoTint">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/content_description</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/content_description</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ToolbarIcon" parent="ImageButton">
        <item name="android:layout_width">@dimen/toolbar_icon_size</item>
        <item name="android:layout_height">@dimen/toolbar_icon_size</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:contentDescription">@string/content_description</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Clickable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Badge" parent="LightField">
        <item name="android:layout_height">@dimen/badge_size</item>
        <item name="android:layout_width">@dimen/badge_size</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/shape_badge</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/badge_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CommonDialogBackground">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:paddingTop">@dimen/padding_24</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DialogImageContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
    </style>

    <style name="DialogImageContainerImage">
        <item name="android:layout_width">@dimen/image_dialog_width</item>
        <item name="android:layout_height">@dimen/image_dialog_height</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DialogImageContainerText">
        <item name="android:textSize">@dimen/text_8</item>
        <item name="android:textColor">@color/black_56</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_4</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="CommonDialogTitle">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/black_80</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="CommonDialogMessage">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:textColor">@color/black_56</item>
        <item name="android:textColorLink">@color/black_56</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="CommonDialogButton">
        <item name="android:textSize">@dimen/text_size_primary_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/light</item>
    </style>
    <style name="CommonDialogButton.Negative" parent="@style/CommonDialogButton">
        <item name="android:textColor">@color/delete</item>
    </style>
    <style name="CommonDialogButton.Positive" parent="@style/CommonDialogButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
