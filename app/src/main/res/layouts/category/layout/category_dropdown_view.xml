<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryContainer"
    style="@style/Clickable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/categoryColor"
            android:layout_width="@dimen/edit_text_height_big"
            android:layout_height="@dimen/edit_text_height_big" />

        <TextView
            android:id="@+id/categoryName"
            style="@style/MediumField"
            android:layout_marginStart="@dimen/category_dd_m_v"
            android:layout_marginEnd="@dimen/category_dd_m_v"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/category_name_text_size" />

    </LinearLayout>

    <View
        style="@style/SeparatorSmall"
        android:background="@color/deselected" />

</LinearLayout>