<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paymentContainer"
    style="@style/Clickable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/SeparatorSmall"
        android:background="@color/dark_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/payment_type_m_v"
        android:layout_marginBottom="@dimen/payment_type_m_v"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/paymentName"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/MediumField"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/payment_type_text_size" />

        <ImageView
            style="@style/ImageView"
            android:layout_width="@dimen/add_item_chevron_size"
            android:layout_height="@dimen/add_item_chevron_size"
            android:layout_gravity="center_vertical|start"
            android:rotation="270"
            android:tint="@color/black"
            app:srcCompat="@drawable/ic_chevron" />


    </LinearLayout>


    <View
        style="@style/SeparatorSmall"
        android:background="@color/dark_gray" />

</LinearLayout>